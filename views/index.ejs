<%- include("partials/header") %>


<div class="jumbotron centered" id="jumbo">
  <div class="container">
    <h1 class="display-3">Welcome</h1>
    <hr>
        
      <div class="container mt-5">
        <h1>Login</h1>

        <div class="row">
          <div class="col-sm-8">
            <div class="card">
              <div class="card-body">
                <form action="/index" method="POST">
                  <div class="form-group">
                    <label for="email mb-0">Email</label>
                    <input type="email" class="form-control" name="email" required>
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" required>
                  </div>
                  <div>
                    <input type="radio" id="student" name="userType" value="student" required>
                    <label for="student"><h5>Student</h5></label>
                    <input type="radio" id="owner" name="userType" value="owner" required>
                    <label for="owner"><h5>Owner</h5></label>
                  </div>
                  <button type="submit" class="btn btn-dark" onclick="moveToHomePage()">Login</button>
                </form>
              </div>
            </div>
          </div>
        </div>  

        <a class="btn btn-light btn-md" href="/registerowner" role="button">Register as an Apartment Owner</a>
        <a class="btn btn-light btn-md" href="/registerstudent" role="button">Register as a Student</a>
      </div>
  </div>
</div>
<%- include("partials/footer") %>
