<%- include("partials/header") %>


<div class="jumbotron centered" id="jumbo">
  <div class="container">
    <h1 class="display-3">Welcome</h1>
    <hr>

      <div class="container mt-5">
        <h1>Login</h1>
        <div class="row">
          <div class="col-sm-8">
            <div class="card">
              <div class="card-body">
                <form action="/index" method="POST">
                  <div class="form-group">
                    <label for="email mb-0">Email</label>
                    <input type="email" class="form-control" name="email" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="must enter a valid email, contains only small letters, test@test.test" required>
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" required>
                  </div>
                  <% if(typeof msg !== 'undefined'){%>
                    <strong>
                      <div class="alert alert-bg-light" role="alert">
                        <%= typeof msg != 'undefined' ? msg : '' %>
                      </div>
                    </strong>
                    <% } %>
                  <div>
                    <input type="radio" id="student" name="userType" value="student" required>
                    <label for="student"><h5>Student</h5></label>
                    <input type="radio" id="owner" name="userType" value="owner" required>
                    <label for="owner"><h5>Owner</h5></label>
                  </div>
                  <button type="submit" class="btn btn-dark">Login</button>
                </form>
                <a href="/recoveryPassword"> <button type="submit" class="btn btn-sm btn-dark mt-2">I Forgot my password</button></a>
              </div>
            </div>
          </div>
        </div>  

        <a class="btn btn-light btn-md" href="/registerowner" role="button">Register as an Apartment Owner</a>
        <a class="btn btn-light btn-md" href="/registerstudent" role="button">Register as a Student</a>

      </div>
  </div>
</div>

<%- include("partials/footer") %>
