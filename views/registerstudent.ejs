
<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register as a Student</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/registerstudent" method="POST" id="rentalHousingUnit">
            <div class="form-group">
              <label for="id">ID</label>
              <input type="text" class="form-control" name="id" required>
            </div>
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" name="name" required>
            </div>
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="text" class="form-control" name="phone" required>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email" pasttern="" title="must enter a valid email" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
              <label for="password">Confirm Password</label>
              <input type="password" class="form-control" id="confirm" name="password" required>
            </div>
            <div>
              <label for="studentCard">Image of your Student card:</label>
              <br>
              <input type="file" id="studentCard" name="studentCard" required>
            </div>
            <br>
          </form>
            <button type="submit" class="btn btn-dark" form="rentalHousingUnit">Register</button>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>